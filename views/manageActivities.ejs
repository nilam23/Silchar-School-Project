<%- include("partials/header") %>

    <h1 class="portal"><small class="text-muted"><b>ADMIN PORTAL</b></small></h1>
    <div class="signup-form">
        <form action="/adminManageActivities" method="POST" enctype="multipart/form-data">
            <h2>Add new activity</h2>
            <hr>
            <div class="form-group">
                <input class="form-control" type="text" id="caption" placeholder="Activity Name" value="" name="caption"
                    required>
            </div>
            <div class="form-group">
                <label for="image">Upload Image</label>
                <input type="file" id="image" name="image" value="" required>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block btn-lg">Add Activity</button>
            </div>
        </form>
    </div>
    <hr style="border-top: 2px solid lightgray;">

    <h2 style="text-align: center;">ACTIVITIES</h2>
    <br>
    <div class="admin-activity-center">
        <% if(activities.length==0) { %>
            <h4><i>No activities available currently.</i></h4>
            <% }else{ %>
                <div class="item">
                    <% activities.forEach(activity=> { %>
                        <img src="data:image/<%=activity.img.contentType%>;base64,
                <%=activity.img.data.toString('base64')%>" alt="<%=activity.title%>"
                            style="width: 200px; height: 100px;">
                        <h4>
                            <%= activity.caption %>
                        </h4>
                        <form action="/adminManageActivities/<%= activity._id %>" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        <hr style="border-top: 2px solid lightgray;">
                        <br>
                        <% }); %>
                </div>
                <% } %>
    </div>