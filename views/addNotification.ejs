<%- include("partials/header") %>

    <h1 class="portal"><small class="text-muted"><b>ADMIN PORTAL</b></small></h1>
    <div class="signup-form">
        <form action="/adminManageNotifications" method="POST">
            <h2>Add new notification</h2>
            <hr>
            <div class="form-group">
                <textarea class="form-control" name="content" placeholder="Content of notification" required></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block btn-lg">Add Notification</button>
            </div>
        </form>
    </div>