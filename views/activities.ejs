    <h1 style="text-align: center;"><small class="text-muted"><b>ACTIVITIES</b></small></h1>
    <br>
    <div class="admin-activity-center">
        <% if(activities.length==0) { %>
            <h4><i>No activities available currently.</i></h4>
            <% }else{ %>
                <div class="item">
                    <% activities.forEach(activity=> { %>
                        <img src="data:image/<%=activity.img.contentType%>;base64,
                            <%=activity.img.data.toString('base64')%>" alt="<%=activity.title%>"
                            style="width: 500px; height: 400px;">
                        <h4 style="text-align: center;">
                            <b>
                                <%= activity.caption %>
                            </b>
                        </h4>
                        <hr style="border-top: 2px solid lightgray;">
                        <br>
                        <% }); %>
                </div>
                <% } %>
    </div>
    <div class="text-center">
        <a class="btn btn-primary" href="/">GO BACK TO HOME</a>
    </div>
    <br>

    <%- include("partials/footer") %>